+	if v, _ := envGoFIPS(); v == "1" {
+		if runtime.GOOS != "linux" {
+			panic("FIPS mode requested (GOFIPS=1) but not supported on " + runtime.GOOS)
+		} else if !iscgo {
+			panic("FIPS mode requested (GOFIPS=1) but not supported with cgo disabled")
+		}
+	}
+}
